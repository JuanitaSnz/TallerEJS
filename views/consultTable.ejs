<!DOCTYPE html>
<html lang="en">
<%- include('templates/header.ejs')%>

    <body>
        <%- include('templates/navBar.ejs') %>
            <div class="container-card-centered">
                <div class="card card-table">
                    <div class="card-header">
                        <h1><%=title%></h1>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead class="table-primary">
                                    <tr>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Descripción</th>
                                        <th scope="col">Modalidad</th>
                                        <th scope="col">Valor Consulta</th>
                                        <th scope="col">Correo</th>
                                        <th scope="col">N° Celular</th>
                                        <th scope="col">Dirección</th>
                                        <th scope="col">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% psychologists.forEach(psy=>{%>
                                        <tr>
                                            <td><%= psy.name %></td>
                                            <td><%= psy.description %></td>
                                            <td><%= psy.modality %></td>
                                            <td><%= psy.consultationFee %></td>
                                            <td><%= psy.email %></td>
                                            <td><%= psy.phoneNumber %></td>
                                            <td><%= psy.address %></td>
                                            <td>
                                                <button type="button" class="btn btn-primary edit-btn" data-id="<%= psy.id %>">Editar</button>
                                                <button type="button" class="btn btn-danger del-btn" data-id="<%= psy.id %>">Eliminar</button>
                                            </td>
                                        </tr>
                                    <%});%>
                                        
                                </tbody>
                            </table>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <a href="/register" class="btn btn-primary">Agregar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
                crossorigin="anonymous"></script>
            <script src="./js/sweetalert2.all.js"></script>
            <script src="js/script.js"></script>
    </body>

</html>